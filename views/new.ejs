<%- include('partials/header') %>

<div class="ui main text container segment">
    <div class="ui hudge header">New Blog</div>
    <form class="ui form" action="/posts" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="post[title]" placeholder="title" />
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="post[image]" placeholder="image url" />
        </div>
        <div class="field">
            <label>Post Content</label>
            <textarea name="post[body]" id="" cols="30" rows="10" required></textarea>
        </div>
        <button class="ui inverted big green button" type="submit">Submit</button>
    </form>
</div>

<a href="/posts">Go back</a>

<%- include('partials/footer') %>
